.chat_main_messages_message
  .chat_main_messages_message_box
    .chat_main_messages_message_box_username 
      = message.user.name
    .chat_main_messages_message_box_datetime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat_main_messages_message_text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?










