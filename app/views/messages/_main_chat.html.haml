.chat_main
  .chat_main_top
    .chat_main_top_leftcontent
      .chat_main_top_leftcontent_group 
        = @group.name
      .chat_main_top_leftcontent_member 
        Member:
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .chat_main_top_btn
      = link_to edit_group_path(@group.id) do
        EDIT

  .chat_main_messages
    = render @messages

  .chat_main_form
    = form_for [@group, @message] do |f|
      .chat_main_form_message
        = f.text_field :content, class: 'chat_main_form_message_text', placeholder: 'type a message'
        = f.label :image, class: 'chat_main_form_message_image' do
          = icon('fas', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input_file'
      = f.submit 'Send', class: 'chat_main_form_btn'
        